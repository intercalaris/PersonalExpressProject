<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Contacts</title>
  <link rel="shortcut icon" href="">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/reset.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Enter your contacts</h1>

  <form action="/contacts" method="POST">
    <input type="text" required placeholder="Name" name="name">
    <input ttype="tel" pattern= "^[0-9]+$" title="Please enter numbers only." required placeholder="Phone number" name="number">
    <input type="email" required placeholder="Email" name="email">
    <button class="submit" required type="submit">Submit</button>
  </form>

  <h2>Contacts</h2>
  <ul class="contacts">
    <% for(var i = 0; i < contacts.length; i++) { %>
      <li>
        <form class="contact" data-id="<%= contacts[i]._id %>" action="/contacts/<%= contacts[i]._id %>?_method=PUT" method="POST">
          <span class="contact-name"><%= contacts[i].name %></span>
          <span class="contact-number"><%= contacts[i].number %></span> 
          <span class="contact-email"><%= contacts[i].email %></span>
          <div class="options">
            <button class="edit" type="button">ᴇᴅɪᴛ</button>
            <button class="update hidden" type="submit">ᴜᴘᴅᴀᴛᴇ</button> 
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </div>
        </form>
      </li>
    <% } %>
  </ul>

  <script src="main.js"></script>
</body>
</html>
